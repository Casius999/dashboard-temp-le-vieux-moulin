# Serveur
PORT=5000
NODE_ENV=development
HOST=localhost
CORS_ORIGIN=http://localhost:3000

# Sécurité
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRATION=1d
JWT_REFRESH_EXPIRATION=7d
BCRYPT_SALT_ROUNDS=10

# API Centrale
CENTRAL_API_URL=http://localhost:8000/api
CENTRAL_API_KEY=your_api_key_here

# Services internes
IOT_SERVICE_URL=http://localhost:8001/api
ML_SERVICE_URL=http://localhost:8002/api
MARKETING_SERVICE_URL=http://localhost:8003/api
ACCOUNTING_SERVICE_URL=http://localhost:8004/api

# MQTT (pour IoT)
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_CLIENT_ID=dashboard_backend
MQTT_USERNAME=mqtt_user
MQTT_PASSWORD=mqtt_password

# Base de données (optionnel)
MONGODB_URI=mongodb://localhost:27017/dashboard
MONGODB_USER=
MONGODB_PASSWORD=

# Redis (optionnel)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
SESSION_SECRET=your_session_secret_change_this_in_production

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# Mise en cache
CACHE_DURATION_SHORT=60  # 1 minute en secondes
CACHE_DURATION_MEDIUM=3600  # 1 heure en secondes
CACHE_DURATION_LONG=86400  # 24 heures en secondes

# Limites et throttling
RATE_LIMIT_WINDOW=15    # Fenêtre de temps en minutes
RATE_LIMIT_MAX=100      # Nombre maximum de requêtes par fenêtre de temps
REQUEST_TIMEOUT=30000   # Timeout des requêtes en ms

# Performance
BODY_PARSER_LIMIT=1mb
COMPRESSION_LEVEL=6
