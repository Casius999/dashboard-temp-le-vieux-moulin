# API Backend
REACT_APP_API_URL=http://localhost:5000/api/v1
REACT_APP_SOCKET_URL=http://localhost:5000

# Configuration
REACT_APP_REFRESH_INTERVAL=60000  # Intervalle de rafraîchissement en ms
REACT_APP_DEFAULT_LANGUAGE=fr     # Langue par défaut
REACT_APP_THEME=light             # Thème par défaut (light/dark)

# Fonctionnalités
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_MAX_POINTS_CHART=100    # Nombre maximum de points dans les graphiques

# Visualisations
REACT_APP_CHART_COLORS=["#2196F3", "#4CAF50", "#FFC107", "#F44336", "#9C27B0", "#00BCD4", "#FF9800", "#795548"]
REACT_APP_DEFAULT_ANIMATION=true  # Animation des graphiques activée par défaut

# Développement
REACT_APP_MOCK_DATA=false         # Utiliser des données fictives pour le développement
REACT_APP_DEBUG_MODE=false        # Mode debug pour afficher des informations supplémentaires
